.animal
  - form_for([:admin, @animal], :html => { :multipart => true }) do |f|
    .details
  
      = f.error_messages

      .row.clear
        = f.label :kind   
        = f.select :kind, Animal::KINDS
    
      .row.clear
        = f.label :name
        = f.text_field :name
        
      .row.clear
        = f.label :identifier
        = f.text_field :identifier
        
      .row.clear
        = f.label :sex
        = f.select :sex, [:male, :female]
        
      .row.clear
        = f.label :age
        = f.text_field :age
        
      .row.clear
        = f.label :color, 'Colour'
        = f.text_field :color
        
      .row.clear
        = f.label :breed
        = f.text_field :breed
 
      .row.clear
        = f.label :description   
        = f.text_area :description

    .photo{:style=>'padding: 30px'}
      = image_tag @animal.image.url(:medium)
      
      = f.label :image
      = f.file_field :image
      
    .row.clear 
      = f.submit 'Update'