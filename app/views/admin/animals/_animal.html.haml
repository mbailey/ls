.animal
  - form_for([:admin, @animal], :html => { :multipart => true }) do |f|
    .details{:style => 'float: left; padding: 30px'}
  
      = f.error_messages

      .row.clear
        = f.label :kind   
        = f.select :kind, Animal::KINDS
    
      .row.clear
        = f.label :name
        = f.text_field :name
    
      .row.clear
        = f.label :identifier
        = f.text_field :identifier
 
      .row.clear
        = f.label :description   
        = f.text_area :description

    .photo{:style=>'padding: 30px'}
      = image_tag @animal.avatar.url(:medium)
      
      = f.label :avatar
      = f.file_field :avatar
      
    .row.clear 
      = f.submit 'Update'